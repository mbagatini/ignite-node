// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Organization {
    id           String   @id @default(uuid())
    name         String
    address      String
    city         String
    state        String
    whatsapp     String
    username     String   @unique
    passwordHash String
    createdAt    DateTime @default(now())

    @@map("organization")
}
